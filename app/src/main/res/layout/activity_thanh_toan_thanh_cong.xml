<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_1"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="600dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="60dp"
        android:paddingBottom="30dp"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎉 Đặt vé thành công!"
            android:textSize="37sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="40dp" />


        <TextView
            android:id="@+id/textCinema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rạp: "
            android:textSize="24sp"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giờ chiếu: "
            android:textSize="24sp"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/textSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghế: "
            android:textSize="24sp"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: "
            android:textSize="24sp"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên: "
            android:textSize="24sp"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="24sp"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/textPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán bằng: "
            android:textSize="24sp"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/textBookingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đặt: "
            android:textSize="24sp"
            android:layout_marginBottom="18dp" />
        <TextView
            android:id="@+id/textMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phim: "
            android:textSize="24sp"
            android:layout_marginBottom="18dp" />
        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/purple"
            android:text="Quay lại trang chủ"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>